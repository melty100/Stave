<div class="container-fluid">

  <div class="row">
    <div class="col">
      <div class="header navbar navbar-light bg-light">
        <h1> Burgers?!</h1>
      </div>
    </div>
  </div>

  <div class="row content-plate align-items-center">

    <div class="col">
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block }}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button class="btn btn-primary" type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col">

      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block }}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>

</div>